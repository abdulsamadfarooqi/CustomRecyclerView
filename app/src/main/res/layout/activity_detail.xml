<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/cardview_dark_background">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:background="@color/cardview_dark_background"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="221dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="30dp"
        android:textColor="@color/cardview_light_background"/>

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt2"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="200dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="0dp"
        android:background="#99ff00"
        android:text="START" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt3"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="220dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="-2dp"
        android:background="#99ff00"
        android:text="PAUSE" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt4"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="220dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="170dp"
        android:background="#99ff00"
        android:text="STOP" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="230dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="84dp"
        android:background="#99ff00"
        android:text="RESTART" />
</RelativeLayout>